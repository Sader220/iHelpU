<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IHelpU" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryDark">@color/darkGrey</item>
        <item name="colorAccent">@color/darkGrey</item>
        <item name="android:fontFamily">@font/alata</item>
        <!-- Customize your theme here. -->
    </style>

    <style name ="background">
        <item name="android:background">@color/lighterDarkGrey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name ="supportBackground">
        <item name="android:background">@color/grey</item>
        <item name="android:backgroundTint">@color/darkGrey</item>
    </style>

    <style name ="editText">
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlHighlight">@color/green</item>
    </style>

    <style name="homeActivityText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>