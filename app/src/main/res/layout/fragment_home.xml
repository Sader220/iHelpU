<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/background">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolBar">
    </include>

    <TextView
        android:id="@+id/textToSpeechText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="100sp"
        android:background="@drawable/home_text_view"
        android:backgroundTint="#ff0000"
        android:text="Wokalizacja tekstu"
        android:theme="@style/homeActivityText"
        app:layout_constraintBottom_toBottomOf="@+id/textToSpeechButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/textToSpeechButton"
        app:layout_constraintTop_toTopOf="@+id/textToSpeechButton"
        app:layout_constraintVertical_bias="0.50" />

    <ImageButton
        android:id="@+id/textToSpeechButton"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:background="@drawable/image_button"
        android:backgroundTint="#EF233B"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135"
        app:srcCompat="@drawable/ic_speaker"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/mouse1Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="100sp"
        android:background="@drawable/home_text_view"
        android:backgroundTint="@color/lightBlue"
        android:text="Touchpad"
        android:theme="@style/homeActivityText"
        app:layout_constraintBottom_toBottomOf="@+id/mouse1Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mouse1Button"
        app:layout_constraintTop_toTopOf="@+id/mouse1Button"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/mouse1Button"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:background="@drawable/image_button"
        android:backgroundTint="@color/blue"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textToSpeechButton"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/ic_mouse1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/speechToTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="100sp"
        android:background="@drawable/home_text_view"
        android:backgroundTint="@color/lightGreen"
        android:text="Rejestracja głosu"
        android:theme="@style/homeActivityText"
        app:layout_constraintBottom_toBottomOf="@+id/speechToTextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/speechToTextButton"
        app:layout_constraintTop_toTopOf="@+id/speechToTextButton"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/speechToTextButton"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:background="@drawable/image_button"
        android:backgroundTint="@color/green"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mouse1Button"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/ic_text_to_speech"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/noAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/signLanguageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/home_text_view"
        android:backgroundTint="@color/grey"
        android:text="Język migowy"
        android:theme="@style/homeActivityText"
        app:layout_constraintBottom_toBottomOf="@+id/signLanguageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/signLanguageButton"
        app:layout_constraintTop_toTopOf="@+id/signLanguageButton"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/signLanguageButton"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:background="@drawable/image_button"
        android:backgroundTint="@color/darkGrey"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speechToTextButton"
        app:layout_constraintVertical_bias="0.05"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>